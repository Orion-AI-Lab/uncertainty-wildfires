{
    "name": "model",
    "n_gpu": 1,
    "gpu_id": 1,

    "arch": {
        "type": "SimpleLSTM",
        "args": {
                "output_lstm": 128,
                "dropout": 0.5}
            },
    "dataset": {
        "type": "FireDataset",
        "args":{
            "dataset_root": "",
            "problem_class": "classification",
            "nan_fill": 0.0,
            "lag": 45,
            "temporal_gap": 0
        }
    },
    "dataloader": {
        "type": "FireDataloader",
        "args": {
            "batch_size": 256,
            "shuffle": true,
            "num_workers": 16,
            "pin_memory": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.004,
            "weight_decay": 0.0063
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 15,
            "gamma": 0.1
        }
    },
    "seed": 17,
    "loss": "nll_loss",
    "noisy": false,
    "temperature_scale": 0.2,
    "positive_weight": 0.5,
    "forward_passes": 1,
    "dropout": false,
    "train_metrics": [
        "accuracy", "precision", "recall", "f1_score", "auc", "aucpr"
    ],
    "valid_metrics": [
        "accuracy", "precision", "recall", "f1_score", "auc", "aucpr", "mean_epistemics",
        "mean_aleatorics", "mean_entropies", "mean_mis", "ece"
    ],
    "trainer": {
        "epochs": 30,

        "save_dir": "",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 1000,

        "tensorboard": false
    },
    "features": {
        "dynamic": ["d2m",
                    "lai",
                    "lst_day",
                    "lst_night",
                    "ndvi",
                    "rh",
                    "smi",
                    "sp",
                    "ssrd",
                    "t2m",
                    "tp",
                    "wind_direction",
                    "wind_speed"],
        "static": ["dem",
                "roads_distance",
                "slope",
                "lc_agriculture",
                "lc_forest",
                "lc_grassland",
                "lc_settlement",
                "lc_shrubland",
                "lc_sparse_vegetation",
                "lc_water_bodies",
                "lc_wetland",
                "population"]
    }
}

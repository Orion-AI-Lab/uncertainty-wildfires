{   "model_path": "/home/skondylatos/mnt/shared_storage/skondylatos/uncertainty_experiments/models/",
    "noisy": true,
    "maps_path": "maps/",
    "temperature_scale": 0.2,
    "num_models": 1,
    "name": "noisy-vi",
    "n_gpu": 1,
    "gpu_id": 1,

    "arch": {
        "type": "BBBLSTM",
        "args": {
            "output_lstm": 128,
            "dropout": 0.5}
    },
    "dataset": {
        "type": "FireDatasetWholeDay",
        "args":{
            "access_mode": "temporal",
            "problem_class": "classification",
            "patch_size": 0,
            "nan_fill": 0.0,
            "lag": 45
        }
    },
    "dataloader": {
        "type": "FireDataloader",
        "args": {
            "batch_size": 512,
            "shuffle": false,
            "num_workers": 16,
            "pin_memory": false
        }
    },
    "dataset_root": "nvme1/skondylatos/",
    "datacube_path": "/mnt/shared_storage/skondylatos/med_cube/med_cube.zarr",
    "input_date": "2022/07/14 00:00:00",
    "forward_passes": 50,
    "dropout": false,
    "trainer": {
        "epochs": 30,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 50,

        "tensorboard": false},
        "features": {
            "dynamic": ["d2m",
                        "lai",
                        "lst_day",
                        "lst_night",
                        "ndvi",
                        "rh",
                        "smi",
                        "sp",
                        "ssrd",
                        "t2m",
                        "tp",
                        "wind_direction",
                        "wind_speed"],
            "static": ["dem",
                    "roads_distance",
                    "slope",
                    "lc_agriculture",
                    "lc_forest",
                    "lc_grassland",
                    "lc_settlement",
                    "lc_shrubland",
                    "lc_sparse_vegetation",
                    "lc_water_bodies",
                    "lc_wetland",
                    "population"]
        }
}
